extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", requierd, type="text" maxlength=80)
        input(name="description", placeholder="Description", requierd, type="text" minlength=20)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", requierd, type="text")
        input(type="submit", value="Upload Video")