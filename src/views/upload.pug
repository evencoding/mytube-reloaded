extends base

block content
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").upload-video__form
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title", placeholder="Title", requierd, type="text" maxlength=80)
        input(name="description", placeholder="Description", requierd, type="text" minlength=5)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", requierd, type="text")
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js") 